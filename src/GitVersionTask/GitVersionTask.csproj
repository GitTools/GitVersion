<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!--full framework needed, as we cross compile for full .NET and dotnetcore, dotnet core uses the netstandard version.-->
        <TargetFrameworks>net472;netstandard2.0;</TargetFrameworks>

        <PackageId>GitVersionTask</PackageId>
        <Title>GitVersionTask</Title>
        <PackageVersion Condition="$(PackageVersion) == '' Or $(PackageVersion) == '*Undefined*'">0.0.1-alpha-0001</PackageVersion>
        <Description>Stamps an assembly with git information based on SemVer.</Description>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <DevelopmentDependency>true</DevelopmentDependency>

        <LangVersion>8.0</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    
    <!--<PropertyGroup Condition="'$(TargetFramework)' == 'netcoreapp2.1' OR '$(TargetFramework)' == 'netcoreapp3.1' ">
    Condition="$(DefineConstants.Contains(UseSystemRuntimeLoader))"
        <DefineConstants>UseSystemRuntimeLoader</DefineConstants>
    </PropertyGroup>-->

    <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0' ">
        <!--Otherwise dependencies like Microsoft.Extensions.DependencyInjection won't be found by the task.-->
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <DefineConstants>UseSystemRuntimeLoader</DefineConstants>
    </PropertyGroup>


    <ItemGroup>
        <PackageReference Condition="$(DefineConstants.Contains(UseSystemRuntimeLoader))" Include="System.Runtime.Loader" Version="4.3.0" PrivateAssets="All" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.2">
            <Private>True</Private>
        </PackageReference>
        <PackageReference Include="LibGit2Sharp" Version="$(PackageVersion_LibGit2Sharp)" PrivateAssets="All"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\GitVersionTask.MsBuild\GitVersionTask.MsBuild.csproj" PrivateAssets="All" />
        <ProjectReference Include="..\GitVersionCore\GitVersionCore.csproj" PrivateAssets="All" />
    </ItemGroup>

    <Import Project="nuget-files.props" />
</Project>
